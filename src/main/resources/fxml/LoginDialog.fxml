<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="mainContainer" alignment="CENTER" spacing="18" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.LoginDialogController" styleClass="login-bg" stylesheets="login_style.css">

    <Label text="Iniciar Sesión" styleClass="login-title" />
    <TextField fx:id="usernameField" promptText="Usuario" maxWidth="240" styleClass="login-input" />
    <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="240" styleClass="login-input" />
    <Label fx:id="errorLabel" styleClass="login-error" visible="false" />
    <HBox alignment="CENTER" spacing="14">
        <Button fx:id="loginButton" text="Iniciar sesión" minWidth="120" styleClass="login-btn" />
        <Button fx:id="registerButton" text="Registrarse" minWidth="120" styleClass="register-btn" />
    </HBox>
</VBox> 